<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_main_app_icon" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/pangoline"
            android:gravity="center"
            android:text="Learn English"
            android:textSize="40sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageEnterLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:defaultFocusHighlightEnabled="false"
                android:background="@drawable/back_entrance"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <EditText
                android:id="@+id/txtEnterLogin"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:defaultFocusHighlightEnabled="false"
                android:hint="Введите свой логин"
                android:fontFamily="@font/ibm_plex_sans"
                app:layout_constraintBottom_toBottomOf="@+id/imageEnterLogin"
                app:layout_constraintEnd_toEndOf="@+id/imageEnterLogin"
                app:layout_constraintStart_toStartOf="@+id/imageEnterLogin"
                app:layout_constraintTop_toTopOf="@+id/imageEnterLogin" />

            <ImageView
                android:id="@+id/imageEnterPass"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/back_entrance"
                android:fontFamily="@font/ibm_plex_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageEnterLogin"
                android:defaultFocusHighlightEnabled="false" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/imageEnterPass"
                app:layout_constraintEnd_toStartOf="@+id/txtEnterPass"
                app:layout_constraintStart_toStartOf="@+id/imageEnterPass"
                app:layout_constraintTop_toTopOf="@+id/imageEnterPass"
                app:srcCompat="@drawable/ic_profile" />

            <EditText
                android:id="@+id/txtEnterPass"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:layout_marginLeft="40dp"
                android:defaultFocusHighlightEnabled="false"
                android:background="@null"
                android:hint="Введите свой пароль"
                android:fontFamily="@font/ibm_plex_sans"
                app:layout_constraintBottom_toBottomOf="@+id/imageEnterPass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageEnterPass" />

            <ImageView
                android:id="@+id/imgWrongPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/txtEnterPass"
                app:layout_constraintEnd_toEndOf="@+id/imageEnterLogin"
                app:layout_constraintTop_toTopOf="@+id/txtEnterPass"
                app:srcCompat="@drawable/ic_wrong_txt" />

            <ImageView
                android:id="@+id/imgBtnLogIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_entrance"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageEnterPass" />

            <ImageButton
                android:id="@+id/imgBtnRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnLogIn"
                app:srcCompat="@drawable/back_image_button_green" />

            <EditText
                android:id="@+id/txtRepeatPass"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:hint="Повторите пароль"
                android:background="@null"
                android:textSize="18sp"
                android:fontFamily="@font/ibm_plex_sans"
                app:layout_constraintBottom_toBottomOf="@+id/imgBtnLogIn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgBtnLogIn" />


            <!--            <EditText-->
            <!--                android:id="@+id/txtEnterPass"-->
            <!--                android:layout_width="260dp"-->
            <!--                android:layout_height="42dp"-->
            <!--                android:layout_marginLeft="40dp"-->
            <!--                android:defaultFocusHighlightEnabled="false"-->
            <!--                android:background="@null"-->
            <!--                android:hint="Введите свой пароль"-->
            <!--                android:fontFamily="@font/ibm_plex_sans"-->
            <!--                app:layout_constraintBottom_toBottomOf="@+id/imageEnterPass"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="@+id/imageEnterPass" />-->

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/ibm_plex_sans"
                app:layout_constraintBottom_toBottomOf="@+id/imgBtnRegister"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgBtnRegister" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/imageEnterLogin"
                app:layout_constraintEnd_toStartOf="@+id/txtEnterLogin"
                app:layout_constraintStart_toStartOf="@+id/imageEnterLogin"
                app:layout_constraintTop_toTopOf="@+id/imageEnterLogin"
                app:srcCompat="@drawable/ic_profile" />

            <ImageView
                android:id="@+id/imgWrongLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/txtEnterLogin"
                app:layout_constraintEnd_toEndOf="@+id/imageEnterLogin"
                app:layout_constraintTop_toTopOf="@+id/txtEnterLogin"
                app:srcCompat="@drawable/ic_wrong_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </TableRow>


</TableLayout>